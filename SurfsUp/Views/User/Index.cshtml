@*View to see all identity user, values come from UserController*@
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
}
 
<div class="page-title">
    <h1>@ViewData["Title"]</h1>
</div>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>
 
<table class="table table-sm table-bordered">
    @*Create table headlines*@
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @*Loop through all users, and show details*@
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            @*Edit selected user*@
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                    Update
                </a>
            </td>
            @*Delete selected user*@
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
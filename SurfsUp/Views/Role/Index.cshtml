@*View to see all identity user, values come from RoleController*@
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
  
<div class="page-title">
    <h1>@ViewData["Title"]</h1>
</div>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>
  
<table class="table table-sm table-bordered table-bordered">
    @*Create table headlines*@
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @*Loop through all users, and show details*@
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            @*i-role is a Custom Tag Helper, to show list of all users, who are members of a role*@
            <td i-role="@role.Id"></td>
            @*Edit selected user*@
            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">
                Edit
                </a>
            </td>
            @*Delete selected user*@
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

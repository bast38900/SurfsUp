                                                    <th>Equipment</th>
                                                    <th>     </th>
                                                    <th>     </th>
                                                    <th>Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@board.BoardName</td>
                                                    <td>@board.Type</td>
                                                    <td>@board.Length</td>
                                                    <td>@board.Width</td>
                                                    <td>@board.Thickness</td>
                                                    <td>@board.Volume</td>
                                                    <td>@board.Equipment</td>
                                                    <td></td>
                                                    <td></td>
                                                    <td>@board.Price</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <img src="@board.Picture" style="height:100%;max-width:300px"/>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/rent/@board.BoardId" class="btn btn-primary">Rent</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="/rent/@board.BoardId" class="btn btn-primary">Rent</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}


@model SurfsUp.Models.Rent;
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="mt-3 mb-5 text-center">Rent the board</h1>
                <form asp-action="Rent">
                    <div class="mb-3">
                        <label asp-for="EndRent" class="control-label mb-1">Rent to:</label>
                        <input asp-for="EndRent" class="form-control" type="datetime-local"  required/>
                    </div>
                    <div class="form-group text-center mt-5">
                         <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
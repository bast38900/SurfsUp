@model SurfsUp.Models.Order;

<h1>Rent the board</h1>
<p>@Url.ActionContext.RouteData.Values["id"]</p>
<form asp-action="Rent">
    <div class="mb-3">
        <label asp-for="DateOfDelivery" class="control-label mb-1"></label>
        <input asp-for="DateOfDelivery" class="form-control" type="date"  required/>
    </div>

    <div class="form-group">
         <input type="submit" value="Create" class="btn btn-primary" />
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@*View to see all identity user, values come from UserController*@
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
}

<section class="header-text">
    <h1>@ViewData["Title"]</h1>
</section>

<div class="container mt-5 mb-5">

    <a asp-action="Create" class="btn btn-primary mb-3"><i class="bi bi-plus-lg"></i>New User</a>
 
    <table class="table">
        @*Create table headlines*@
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @*Loop through all users, and show details*@
        @foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                @*Edit selected user*@
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                            Update
                        </a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>